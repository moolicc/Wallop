<?xml version="1.0" encoding="UTF-8"?>
<package>
    <metadata>
        <name>Tests</name>
        <version>1.0</version>
        <description>Contains various modules</description>
        <variables>
            <ver>1.0</ver>
            <desc>Renders a beautiful square</desc>
        </variables>
    </metadata>
    <modules>
        <module>
            <metadata>
                <name>Square Test</name>
                <version>$ver</version>
                <description>$desc</description>
                <scriptEngine>
                    <name>Iron Python</name>
                    <args verbose="true" />
                </scriptEngine>
                <type>Actor</type>
                <apis>
                    <api>EzRender</api>
                </apis>
                <source>square.py</source>
            </metadata>

            <settings>
                <setting>
                    <name>x</name>
                    <description>x position of the square</description>
                    <defaultValue>0</defaultValue>
                    <type>real</type>
                    <required>false</required>
                </setting>
                <setting>
                    <name>y</name>
                    <description>y position of the square</description>
                    <defaultValue>10</defaultValue>
                    <type>real</type>
                    <required>false</required>
                </setting>
                <setting>
                    <name>width</name>
                    <description>width of the square</description>
                    <type>real</type>
                    <required>true</required>
                </setting>
                <setting>
                    <name>height</name>
                    <description>height of the square</description>
                    <type>real</type>
                    <required>true</required>
                </setting>
            </settings>
        </module>

        <module>
            <metadata>
                <name>Director Test</name>
                <version>$ver</version>
                <description>$desc</description>
                <scriptEngine>
                    <name>Iron Python</name>
                    <args verbose="true" />
                </scriptEngine>
                <type>Director</type>
                <apis>
                    <api>EzRender</api>
                </apis>
                <source>director.py</source>
                <variables>
                    <desc>Renders a beautiful square MODULE</desc>
                </variables>
            </metadata>

            <settings>
                <setting>
                    <name>x</name>
                    <description>x position of the square</description>
                    <defaultValue>0</defaultValue>
                    <type>real</type>
                    <required>false</required>
                </setting>
                <setting>
                    <name>y</name>
                    <description>y position of the square</description>
                    <defaultValue>10</defaultValue>
                    <type>real</type>
                    <required>false</required>
                </setting>
                <setting>
                    <name>width</name>
                    <description>width of the square</description>
                    <type>real</type>
                    <required>true</required>
                </setting>
                <setting>
                    <name>height</name>
                    <description>height of the square</description>
                    <type>real</type>
                    <required>true</required>
                </setting>
            </settings>
        </module>
    </modules>
</package>